{
	"info": {
		"_postman_id": "rambini-auth-api-v2",
		"name": "Rambini Auth API - Email/Password + OTP",
		"description": "Complete authentication API collection for Rambini Food Ordering Platform with email/password registration and OTP-based email verification",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "rambini-auth"
	},
	"item": [
		{
			"name": "1. Registration & Email Verification",
			"item": [
				{
					"name": "Register (Email & Password)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.otpId) {",
									"        pm.collectionVariables.set(\"registration_otp_id\", response.otpId);",
									"        pm.collectionVariables.set(\"test_email\", pm.variables.get(\"email\"));",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"register"
							]
						},
						"description": "Register a new user with email and password. Returns an OTP ID that should be used for email verification."
					},
					"response": []
				},
				{
					"name": "Verify Email (OTP)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.test(\"Email verified successfully\", function () {",
									"        pm.expect(response.message).to.include(\"verified\");",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{test_email}}\",\n    \"otpId\": \"{{registration_otp_id}}\",\n    \"otpCode\": \"123456\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/verify-email",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"verify-email"
							]
						},
						"description": "Verify email address using the OTP code received via email. Use the otpId from registration response."
					},
					"response": []
				},
				{
					"name": "Resend Verification Email",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.otpId) {",
									"        pm.collectionVariables.set(\"registration_otp_id\", response.otpId);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{test_email}}\",\n    \"otpId\": \"{{registration_otp_id}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/resend-verification-email",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"resend-verification-email"
							]
						},
						"description": "Resend verification email. Can provide existing otpId to resend same OTP, or omit to generate new one."
					},
					"response": []
				}
			],
			"description": "User registration with email/password and email verification using OTP"
		},
		{
			"name": "2. Login & Authentication",
			"item": [
				{
					"name": "Login (Email & Password)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.tokens) {",
									"        pm.collectionVariables.set(\"access_token\", response.tokens.accessToken);",
									"        pm.collectionVariables.set(\"refresh_token\", response.tokens.refreshToken);",
									"        pm.collectionVariables.set(\"user_id\", response.user.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"login"
							]
						},
						"description": "Login with email and password. Returns JWT tokens."
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/me",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"me"
							]
						},
						"description": "Get current authenticated user information"
					},
					"response": []
				}
			],
			"description": "User login and authentication"
		},
		{
			"name": "3. Password Management",
			"item": [
				{
					"name": "Forgot Password",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.otpId) {",
									"        pm.collectionVariables.set(\"password_reset_otp_id\", response.otpId);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/forgot-password",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"forgot-password"
							]
						},
						"description": "Request password reset. Returns OTP ID that should be used with the OTP code sent via email."
					},
					"response": []
				},
				{
					"name": "Reset Password (OTP)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"otpId\": \"{{password_reset_otp_id}}\",\n    \"otpCode\": \"123456\",\n    \"password\": \"NewSecurePassword123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/reset-password",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"reset-password"
							]
						},
						"description": "Reset password using OTP code received via email. Requires email, otpId from forgot-password response, otpCode from email, and new password."
					},
					"response": []
				},
				{
					"name": "Change Password",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"currentPassword\": \"{{password}}\",\n    \"newPassword\": \"NewSecurePassword456!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/change-password",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"change-password"
							]
						},
						"description": "Change password for authenticated user. Requires current password and new password."
					},
					"response": []
				}
			],
			"description": "Password management endpoints - forgot password, reset password, and change password"
		},
		{
			"name": "4. Profile Management",
			"item": [
				{
					"name": "Complete Profile",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{access_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"phoneNumber\": \"+2348123456789\",\n    \"country\": \"NG\",\n    \"address\": {\n        \"address_line_1\": \"123 Main Street\",\n        \"address_line_2\": \"Apt 4B\",\n        \"city\": \"Lagos\",\n        \"state\": \"Lagos\",\n        \"postal_code\": \"100001\",\n        \"latitude\": 6.5244,\n        \"longitude\": 3.3792,\n        \"is_default\": true\n    }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/complete-profile",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"complete-profile"
							]
						},
						"description": "Complete user profile. Now requires phoneNumber (instead of email). Email is already set during registration."
					},
					"response": []
				}
			],
			"description": "User profile management"
		},
		{
			"name": "5. Token Management",
			"item": [
				{
					"name": "Refresh Access Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.accessToken) {",
									"        pm.collectionVariables.set(\"access_token\", response.accessToken);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refreshToken\": \"{{refresh_token}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/refresh-token",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"refresh-token"
							]
						},
						"description": "Refresh access token using refresh token"
					},
					"response": []
				}
			],
			"description": "JWT token management"
		},
		{
			"name": "6. Phone OTP (Legacy)",
			"item": [
				{
					"name": "Verify Phone OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.tokens) {",
									"        pm.collectionVariables.set(\"access_token\", response.tokens.accessToken);",
									"        pm.collectionVariables.set(\"refresh_token\", response.tokens.refreshToken);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"otpId\": \"{{phone_otp_id}}\",\n    \"otpCode\": \"123456\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/verify-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"verify-otp"
							]
						},
						"description": "Verify phone OTP (legacy endpoint for phone-based authentication)"
					},
					"response": []
				},
				{
					"name": "Resend Phone OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"otpId\": \"{{phone_otp_id}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/resend-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"resend-otp"
							]
						},
						"description": "Resend phone OTP (legacy endpoint)"
					},
					"response": []
				}
			],
			"description": "Legacy phone OTP endpoints (for backward compatibility)"
		}
